<div class="central">
  <div id="col-main" class="clearfix">
    <div id="customer-reset-password">
      <h2 class="page-title">{{ 'customer.reset_password.title' | t }}</h2>

      <p>{{ 'customer.reset_password.subtext' | t: email: email }}</p>

      {% form 'reset_customer_password' %}

      {% if form.errors %}
      <div class="alert alert-error">
        <button type="button" class="close" data-dismiss="alert">Ã—</button>
        {{ form.errors | default_errors }}
      </div>
      {% endif %}

      <div class="group-input">      
        <input type="password" required="required" name="customer[password]" id="customer_password" />
        <span class="highlight"></span>
        <span class="bar"></span>
        <label>{{ 'customer.reset_password.password' | t }} *</label>
      </div>
      
      <div class="group-input">      
        <input type="password" required="required" name="customer[password_confirmation]" id="customer_password_confirmation" />
        <span class="highlight"></span>
        <span class="bar"></span>
        <label>{{ 'customer.reset_password.password_confirm' | t }} *</label>
      </div>
      
      <div class="control-group last">
        <button class="btn btn-1 ripple" type="submit">{{ 'customer.reset_password.submit' | t }}</button>
      </div>
      {% endform %}
    </div>
  </div>
</div>